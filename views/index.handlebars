<div>There are <strong>{{teams.length}}</strong> teams</div>
<table class='table-auto border-spacing-4'>
  <thead>
    <tr class='border-b-2 border-purple-700'>
      <td>Name</td>
      <td>Country</td>
      <td>Actions</td>
    </tr>
  </thead>
  <tbody>
    {{#each teams as |team|}}
      <tr
        class='border-b border-purple-700 last:border-none hover:bg-purple-500 transition-all duration-300 ease-in-out'
      >
        <td class='py-2'>{{team.name}}</td>
        <td class='py-2'>{{team.area.name}}</td>
        <td class='py-2'><a href='/teams/{{team.id}}'><i
              class='fa-solid fa-eye'
            ></i></a>
          <i class='fa-solid fa-pen'></i>
          <i class='fa-solid fa-trash'></i></td>
      </tr>
    {{/each}}
  </tbody>
</table>
