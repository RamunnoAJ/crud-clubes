<div class='flex flex-row w-full items-center justify-between'>
  <p>There are <strong>{{teams.length}}</strong> teams</p>
  <button class='py-2 px-4 bg-slate-700 hover:bg-slate-800 shadow-sm rounded text-slate-300 transition-all duration-300 ease-in-out'>Add team</button>
</div>
<table
  class='table-auto border-separate border-spacing-x-1 bg-slate-800 text-slate-300 shadow-sm border-8 border-slate-800 mb-8'
>
  <thead class='font-semibold bg-slate-700'>
    <tr>
      <td class='p-4 py-2'>Name</td>
      <td class='p-4 py-2'>Country</td>
      <td class='p-4 py-2'>Actions</td>
    </tr>
  </thead>
  <tbody>
    {{#each teams as |team|}}
      <tr>
        <td class='p-4 py-2'>{{team.name}}</td>
        <td class='p-4 py-2'>{{team.area.name}}</td>
        <td class='p-4 py-2 flex flex-row justify-center items-center gap-2'><a
            href='/teams/{{team.abbreviation}}'
          ><i
              class='fa-solid fa-eye hover:text-purple-700 transition-all duration-300 ease-in-out cursor-pointer text-lg'
            ></i></a>
          <i
            class='fa-solid fa-pen hover:text-purple-700 transition-all duration-300 ease-in-out cursor-pointer text-lg'
          ></i>
          <i
            class='fa-solid fa-trash hover:text-red-700 transition-all duration-300 ease-in-out cursor-pointer text-lg'
          ></i></td>
      </tr>
    {{/each}}
  </tbody>
</table>
