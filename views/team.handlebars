<main class='flex flex-col justify-center items-center gap-8 relative my-8'>
  <a href='/' class='self-start text-xl absolute top-1 left-1'><i
      class='fa-solid fa-arrow-left'
    ></i></a>
  <div class='flex flex-col gap-4 justify-center items-center'>
    <img
      width='120'
      src='{{team.image}}'
      alt='{{team.name}}'
      onerror="this.onerror=null;this.src='/assets/shield-crest-placeholder.png'"
    />
    <h2 class='text-2xl font-medium uppercase'>{{team.name}}</h2>
    {{#if team.founded}}
      <h3
        class='text-xl font-medium text-slate-900 hover:text-slate-700 transition-all duration-300 ease-in-out'
      ><a href='{{team.website}}' target='_blank'>Website</a></h3>
    {{/if}}
  </div>

  <table
    class='table-auto border-separate border-spacing-x-1 bg-slate-800 text-slate-300 shadow-sm border-8 border-slate-800'
  >
    <thead class='font-semibold bg-slate-700'>
      <tr>
        <td class='p-4 py-2'>Information</td>
        <td class='p-4 py-2'>Value</td>
      </tr>
    </thead>
    <tbody>
      {{#if team.abbreviation}}
        <tr>
          <td class='p-4 py-2'>TLA</td>
          <td class='p-4 py-2'>{{team.abbreviation}}</td>
        </tr>
      {{/if}}
      {{#if team.name}}
        <tr>
          <td class='p-4 py-2'>Name</td>
          <td class='p-4 py-2'>{{team.name}}</td>
        </tr>
      {{/if}}
      {{#if team.area.name}}
        <tr>
          <td class='p-4 py-2'>Area</td>
          <td class='p-4 py-2'>{{team.area.name}}</td>
        </tr>
      {{/if}}
      {{#if team.address}}
        <tr>
          <td class='p-4 py-2'>Address</td>
          <td class='p-4 py-2'>{{team.address}}</td>
        </tr>
      {{/if}}
      {{#if team.phone}}
        <tr>
          <td class='p-4 py-2'>Phone</td>
          <td class='p-4 py-2'>{{team.phone}}</td>
        </tr>
      {{/if}}
      {{#if team.email}}
        <tr>
          <td class='p-4 py-2'>Email</td>
          <td class='p-4 py-2'>{{team.email}}</td>
        </tr>
      {{/if}}
      {{#if team.founded}}
        <tr>
          <td class='p-4 py-2'>Founded</td>
          <td class='p-4 py-2'>{{team.founded}}</td>
        </tr>
      {{/if}}
      {{#if team.stadium}}
        <tr>
          <td class='p-4 py-2'>Stadium</td>
          <td class='p-4 py-2'>{{team.stadium}}</td>
        </tr>
      {{/if}}
    </tbody>
  </table>
  <div>
    <a href='/teams/{{team.abbreviation}}/edit'>
      <button
        class='py-2 px-4 bg-slate-700 hover:bg-slate-800 shadow-sm rounded text-slate-300 transition-all duration-300 ease-in-out'
      >Edit</button>
    </a>
    <button
      class='py-2 px-4 bg-slate-700 hover:bg-red-700 shadow-sm rounded text-slate-300 transition-all duration-300 ease-in-out'
      data-team-id='{{team.id}}'
      id='button-delete'
    >Delete</button>
  </div>
</main>

<script src='/src/handleDeleteTeam.js'></script>
